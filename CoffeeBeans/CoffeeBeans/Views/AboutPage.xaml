<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeBeans.Views.AboutPage"
             xmlns:vm="clr-namespace:CoffeeBeans.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Grid Padding="5" BackgroundColor="DodgerBlue" HeightRequest="40">
            <Label Text="Test" FontSize="Title" FontAttributes="Bold" VerticalOptions="CenterAndExpand"/>
        </Grid>
    </StackLayout>
</ContentPage>
