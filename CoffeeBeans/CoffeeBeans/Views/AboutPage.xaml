<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeBeans.Views.AboutPage"
             xmlns:vm="clr-namespace:CoffeeBeans.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Margin="10">
        <Label Text="Welcome" FontSize="45" />
        <Label Text="to LICs companion app"  FontSize="Title"/>
        <StackLayout Margin="0,10,0,0">
            <Label Text="To begin simply tap the upper left corner and from there you can navigate the pages in the app." />
            <Label Text="Browse: Here you can buy and sell coffee beans by kilos." />
            <Label Text="Orders: Here you can view your transactions that are currently pending, in transit or your transaction history." />

        </StackLayout>
    </StackLayout>
</ContentPage>
